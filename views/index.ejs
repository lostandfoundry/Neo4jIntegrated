<h1>Add an entity</h1>
<form method="post" action="/person/add">
    <label>Type (One among person,pet or other)</label><br>
    <input type="text" name="type">
    <br>
    <label>Name</label><br>
    <input type="text" name="name">
    <br>
    <label>Role</label><br>
    <input type="text" name="role">
    <br>
    <label>Organization</label><br>
    <input type="text" name="org">
    <br><br>
    <input type="submit" value="submit"><br>
</form>

<h1>Delete people</h1>
<form method="post" action="/person/del">
    <label>Name</label><br>
    <input type="text" name="name">
    <br><br>
    <input type="submit" value="submit"><br><br>
</form>

<h1>Establish relationships</h1>
<form method="post" action="/person/link">
    <label>Name 1 </label><br>
    <input type="text" name="name1">
    <br><br>
    <label>Relationship (One among friend,colleague,relative,owner,neighbour or other)</label><br>
    <input type="text" name="connect">
    <br><br>
    <label>Name 2 (if relationship is pet, name of pet to be specified here)</label><br>
    <input type="text" name="name2">
    <br><br>
    <input type="submit" value="submit"><br><br>
</form>

<h1>Information</h1>
<ul>
    <% people.forEach(function(person){ %>
    <li>
        <%= person.title %><br>
        <%= person.role %><br>
        <%= person.org %><br>
    </li>
    <% }) %>
</ul>